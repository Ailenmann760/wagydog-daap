# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# ====================================
# DATABASE
# ====================================
# Get this from Neon.tech or Supabase after creating your database
# Example: postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname
DATABASE_URL="postgresql://user:password@host:5432/database"

# ====================================
# SERVER
# ====================================
NODE_ENV=production
PORT=4000

# ====================================
# AUTHENTICATION
# ====================================
# Generate a new secure JWT secret (run: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
JWT_SECRET="REPLACE_WITH_64_CHAR_RANDOM_STRING"
JWT_EXPIRY=7d

# Change these from defaults!
ADMIN_DEFAULT_EMAIL=admin@wagydog.com
ADMIN_DEFAULT_PASSWORD="CHANGE_THIS_TO_SECURE_PASSWORD"

# ====================================
# CORS
# ====================================
# Add your Netlify and custom domain URLs here
ALLOWED_ORIGINS=https://your-app.netlify.app,https://your-custom-domain.com

# ====================================
# EXTERNAL APIs (Optional - for real data)
# ====================================
GECKOTERMINAL_API_KEY=
DEXSCREENER_API_KEY=
MORALIS_API_KEY=
ALCHEMY_API_KEY=

# ====================================
# WEBSOCKET
# ====================================
WS_PORT=4000

# ====================================
# DEPLOYMENT (Railway specific)
# ====================================
# Railway will set these automatically
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
